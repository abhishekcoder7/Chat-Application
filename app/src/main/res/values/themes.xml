<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChitChat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_theme_light</item>
        <item name="colorPrimaryVariant">@color/header_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_theme_light</item>
        <item name="colorSecondaryVariant">@color/header_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Heading">
        <item name="android:textColor">@color/header_light</item>
    </style>

    <style name="Texts">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContactCard">
        <item name="android:background">#B4C2EC</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="ActionBar">
        <item name="android:background">@color/app_theme_light</item>
    </style>

</resources>