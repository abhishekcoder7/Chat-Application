<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChitChat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_theme_dark</item>
        <item name="colorPrimaryVariant">@color/header_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_theme_dark</item>
        <item name="colorSecondaryVariant">@color/header_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Heading">
        <item name="android:textColor">@color/header_dark</item>
    </style>

    <style name="Texts">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Random">
        <item name="android:color">#262A35</item>
        <item name="cornerRadius">10dp</item>
    </style>


    <style name="ActionBar">
        <item name="android:background">@color/app_theme_dark</item>
    </style>


</resources>